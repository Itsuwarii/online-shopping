syntax = "v1"

type Image {
	ImageId     int64  `json:"id"`
	ImageBase64 string `json:"imagebase64"`
}

type ImageId {
	Id int64 `json:"id"`
}

type NewImage {
	ImageBase64 string `json:"imagebase64"`
}

@server (
	prefix: /image
	jwt: Auth
)
service mall-api {
	@handler ImageHandler
	get / (ImageId) returns (Image)

	@handler ImagePutHandler
	post / (NewImage) returns (ImageId)
}