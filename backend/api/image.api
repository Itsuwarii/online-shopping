syntax = "v1"

type (
	GetImageRequest {
		ImageId int64 `path:"id"`
	}
	
	GetImageReply {
		ImageBase64 string `json:"imagebase64"`
	}

	PutImageRequest {
		ImageBase64 string `json:"imagebase64"`
	}

	PutImageReply {
		ID    int64  `json:"image_id"`
	}
)

@server (
    jwt: Auth
)
service mall-api {
	@handler GetImageHandler
	get /image/:id (GetImageRequest) returns (GetImageReply)

	@handler PutImageHandler
	put /image (PutImageRequest) returns (PutImageReply)
}

