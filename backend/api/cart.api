syntax = "v1"

type CartProduct {
	ProductId int64 `json:"id"`
	Number    int   `json:"number"`
}

// 购物车
type Cart {
	CartProductList []CartProduct `json:"cart_product_list"`
}

@server (
	prefix: /cart
	jwt: Auth
)
service mall-api {
	// 获取购物车
	@handler CartHandler
	get / returns (Cart)

	// 修改购物车
	@handler UpdateCartHandler
	post / (Cart)

	// 清空购物车
	@handler ClearCartHandler
	delete /
}