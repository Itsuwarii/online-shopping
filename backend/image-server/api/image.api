syntax = "v1"

type ImageResp {
	ImageHash   string `json:"hash"`
	ImageBase64 string `json:"base64"`
}

type ImageIndex {
	ImageHash string `json:"hash"`
	Message   string `json:"message"`
}

type ImageReq {
	ImageBase64 string `json:"base64"`
}

@server (
	prefix: /image
)
service image-api {
	@handler ImageHandler
	get / (ImageIndex) returns (ImageResp)

	@handler ImagePutHandler
	post / (ImageReq) returns (ImageIndex)
}

